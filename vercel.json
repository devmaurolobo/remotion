{
  "version": 2,
  "builds": [
    {
      "src": "api/vercel-polling.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/vercel-polling.js"
    },
    {
      "src": "/videos/(.*)",
      "dest": "/api/vercel-polling.js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/vercel-polling.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "REMOTION_CACHE_DIR": "/tmp",
    "REMOTION_OUTPUT_DIR": "/tmp",
    "REMOTION_TEMP_DIR": "/tmp",
    "REMOTION_BROWSER_CACHE_DIR": "/tmp",
    "REMOTION_DISABLE_BROWSER_DOWNLOAD": "true"
  }
}
